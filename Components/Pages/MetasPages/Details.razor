@page "/DetallesMetas"
@using System.Linq.Expressions
@inject MetaServices metaServices
@rendermode InteractiveServer

<PageTitle>Detalles de las Metas</PageTitle>
<div class="container">
	<div class="card shadow-lg">
		<div class="card-header">
			<h3><b>Detalles de las Metas</b></h3>
			<a href="/CrearMeta">Crear</a>
		</div>
		<div class="card-body">
			<table class="table">
				<thead>
					<tr>
						<th>ID</th>
						<th>Descripci&oacute;n</th>
						<th>Fecha</th>
						<th>Monto</th>
						<th></th>
						<th></th>
					</tr>
				</thead>
				<tbody>
					@foreach (var meta in listaMetas)
					{
						<tr>
							<td>@meta.MetaId</td>
							<td>@meta.Descripcion</td>
							<td>@meta.Fecha.ToShortDateString()</td>
							<td>@meta.Monto.ToString("N2")</td>
							<td>
								<a href="/EditarMetas/@meta.MetaId" class="btn btn-primary"> Editar<i class="bi bi-pencil-square"></i></a>
								<a href="/EliminarMetas/@meta.MetaId" class="btn btn-danger">Eliminar<i class="bi bi-trash2"></i></a>
							</td>
						</tr>
					}
				</tbody>
			</table>
		</div>
		<div class="card-footer">
			<p><b>Total de Metas:</b> @listaMetas.Count</p>
		</div>
	</div>
</div>

@code {
	public Metas metas { get; set; } = new Metas();
	public List<Metas> listaMetas = new List<Metas>();

	protected override void OnInitialized()
	{
		listaMetas = metaServices.ObtenerLista(c => true);
	}
}